<%= form_for @page_attachment, html: { multipart: true } do |f| %>
  <% if @page_attachment.errors.any? %>
    <div class="errors" %>
      <h2><%= pluralize(@page_attachment.errors.count, "error") %>
        prevented this Image from saving</h2>
        <ul>
        <%= @page_attachment.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
  <% end %>

  <div class="form-group">
    <%= f.text_area :title, placeholder: "Enter Title" %>
  </div>
  <div class="form-group">
    <%= f.text_area :description, placeholder: "Enter Description" %>
    <%= f.submit "Save", class: 'btn btn-primary' %>
  </div>
<% end %>

